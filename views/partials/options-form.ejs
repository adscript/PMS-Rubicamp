<h2>Options</h2>
        <form action="" method="POST" class="mx-5">
            <div class="form-group row">
                <div class="col-sm-2">Columns</div>
                <%_ let multiCol; -%>
                <%_ (formOptions.length > 5) ? multiCol = formOptions.length / 3 : multiCol = 1 ; -%>
                <%_ for(i = 0; i < 3 * multiCol; i +=3 ){-%>
                <div class="col"> -%>
                    <%_ for(j = i; j < i+3; j++) { -%>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="checkopt" value="<%= formOptions[j] %>" <%= loggedInUser[`${optTable}`][`${formOptions[j]}`] ? "checked" : "" %>>
                        <label class="form-check-label">
                            <%= formOptions[j] %>
                        </label>
                    </div>
                    <%_ } -%>
                </div>
                <%_ } -%>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="hidden" name="lasturl" value="<%= url %>">
                    <button type="submit" class="btn btn-primary">Apply</button>
                </div>
            </div>
        </form>