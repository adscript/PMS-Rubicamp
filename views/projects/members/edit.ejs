<%_ include ../../partials/header -%>
<link rel="stylesheet" href="/stylesheets/style.css">
<link rel="stylesheet" href="/stylesheets/sidebar.css">
</head>

<body>
    <%_ include ../../partials/navbar -%>
    <%_ include ../../partials/sidebar -%>
    <div role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 " style="margin-top:30px;">
        <h1>Edit Member</h1>
        <hr />
        <form action="" method="POST">
            <h2>Users</h2>
            <div class="form-check" style="margin: 15px 120px;">
                <input type="text" class="form-control" value="<%= userData.fullname %>" readonly>
            </div>
            <input type="hidden" name="roleawal" value="<%= userData.role %>">
            <h2>Position</h2>
            <div class="form-check" style="margin: 15px 120px;">
                <input class="form-check-input" type="radio" name="role" value="Manager" <%= (userData.role) == 'Manager' ? 'checked' : '' %>>
                    Manager
                </label>
            </div>
            <div class="form-check" style="margin: 15px 120px;">
                <input class="form-check-input" type="radio" name="role" value="Quality Assurance" <%= (userData.role) == "Quality Assurance" ? 'checked' : '' %>>
                <label class="form-check-label">
                    Quality Assurance
                </label>
            </div>
            <div class="form-check" style="margin: 15px 120px;">
                <input class="form-check-input" type="radio" name="role" value="Software Developer" <%= (userData.role) == 'Software Developer' ? 'checked' : '' %>>
                <label class="form-check-label">
                    Software Developer
                </label>
            </div>
            <input type="hidden" name="memberid" value="<%= userData.id %>">
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Edit User</button>
                </div>
            </div>
        </form>
    </div>
    <%_ include ../../partials/footer -%>